<% provide(:title, 'Log in') %>

<div class="page-header">
  <h1>Log in</h1>
</div>

<%= form_for :session, url: login_path, html: { class: 'form-horizontal' } do |f| %>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class="col-sm-4">
        <%= f.email_field :email, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'col-sm-2 col-sm-offset-2 control-label' %>
      <div class="col-sm-4">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-4">
        <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
      </div>
    </div>

<% end %>

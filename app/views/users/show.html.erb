<% provide(:title, 'Your profile') %>

<div class="page-header">
  <h1>Welcome, <%= @user.name %></h1>
</div>

<div class="row">
<div class="col-md-12">
<p>Your details:</p>
<ul>
  <li>Name: <%= @user.name %></li>
  <li>Email: <%= @user.email %></li>
</ul>

  <%= link_to 'Edit your profile', edit_user_path(@user), class: 'btn btn-default' %>
  <%= link_to 'View your diary entries', user_entries_path(@user), class: 'btn btn-default' %>

</div>
</div>

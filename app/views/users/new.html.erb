<h1>Sign me up!</h1>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation, 'Confirmation' %>
    <%= f.password_field :password_confirmation %>
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.submit 'Sign Up' %>
<% end %>

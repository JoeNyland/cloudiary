<% provide(:title, 'View a diary entry') %>

<div class="page-header">
  <h1><%= l @entry.created_at.to_date %></h1>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= @entry.body %>
      </div>
    </div>
  </div>
</div>

<div class="btn-group">
  <%= link_to 'Back to your entries', user_entries_path(@user), class: 'btn btn-default' %>
  <%= link_to 'Delete this entry', user_entry_path, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
  <%= link_to 'Edit this entry', edit_user_entry_path, class: 'btn btn-default' %>
</div>
